<Window x:Class="ms.video.downloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:ms.video.downloader"
        Title="MS.Video.Downloader" Height="594" Width="1280" Loaded="Window_Loaded_1" Icon="Resources/DL180.ico">
    <Grid>
        <Grid Margin="1,1,1,1" >
            <Grid x:Name="WebViewGrid" Margin="0,0,0,0" >
                <Grid  VerticalAlignment="Top" HorizontalAlignment="Stretch" Height="32">
                    <Button x:Name="GoBack" Content="&lt;" HorizontalAlignment="Left" Height="32" Margin="0,0,0,0" VerticalAlignment="Top" Click="GoBack_Click" Width="32" />
                    <Button x:Name="GoForward" Content="&gt;" HorizontalAlignment="Left" Height="32" Margin="32,0,0,0"  VerticalAlignment="Top" Click="GoForward_Click" Width="32" />
                    <TextBox x:Name="Url" Text="http://www.youtube.com/" Margin="64,0,0,0" Height="32" VerticalAlignment="Top" FontSize="18" FontWeight="Bold" VerticalContentAlignment="Center" />
                </Grid>
                <WebBrowser x:Name="Browser" HorizontalAlignment="Stretch" Source="http://www.youtube.com/" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" Margin="0,32,0,54" LoadCompleted="Browser_LoadCompleted" Navigated="Browser_Navigated"/>
            </Grid>
            <Grid x:Name="Interaction" Height="49" ZIndex="9" VerticalAlignment="Bottom" >
                <StackPanel Orientation="Horizontal" Height="48" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="359">
                    <Button x:Name="GetVideo" Content="Download Video" HorizontalAlignment="Stretch" Height="48" Margin="0,0,0,0" VerticalAlignment="Top" Click="GetVideo_Click" Width="120" />
                    <Button x:Name="GetList" Content="Download Playlist" HorizontalAlignment="Stretch" Height="48" Margin="0,0,0,0" VerticalAlignment="Top" Click="GetList_Click" Width="134" />
                    <CheckBox x:Name="ConvertMp3" Content="Convert to MP3" Margin="0,0,0,29" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" Width="103" Height="18" VerticalAlignment="Bottom" />
                </StackPanel>
                <Grid Margin="255,1,110,0">
                    <ProgressBar x:Name="ProgressBar" HorizontalAlignment="Stretch" MouseDown="Button_Click_1" Foreground="CornflowerBlue" Height="24" VerticalAlignment="Bottom" />
                    <TextBlock x:Name="Log" Text="" HorizontalAlignment="Stretch" Height="24" VerticalAlignment="Bottom" FontSize="14" FontWeight="Bold" MouseDown="Button_Click_1" TextTrimming="CharacterEllipsis" ToolTip="{Binding TemplatedParent, Mode=OneWay, RelativeSource={RelativeSource Self}}"  />
                </Grid>
                <WebBrowser x:Name="Paypal" Margin="0,0,-38,7" HorizontalAlignment="Right" Width="148" Height="37" VerticalAlignment="Bottom"/>
            </Grid>
            <local:DownloadListView x:Name="DownloadStatusGrid" Margin="0,0,0,53"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Visibility="Collapsed"/>
        </Grid>
    </Grid>
</Window>
