<UserControl x:Class="MS.Youtube.Downloader.VideoItem"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="111" >
        <Border Margin="4" BorderThickness="1" BorderBrush="SteelBlue" CornerRadius="3">
            <StackPanel Orientation="Horizontal">
                <Image Name="img" Margin="6"  Source="{Binding Path=ThumbnailUrl}"  Width="120" Height="90" ToolTip="{Binding Path=Title}"/>
                <StackPanel>
                <TextBlock FontWeight="Bold" FontSize="18"  Height="20" Text="{Binding Path=Title}" TextTrimming="CharacterEllipsis" ToolTip="{Binding Path=Title}"/>
                <TextBlock Text="{Binding Path=Description}" FontSize="10" Height="60" TextTrimming="CharacterEllipsis"  ToolTip="{Binding Path=Description}"/>
                </StackPanel>
            </StackPanel>
        </Border>
</UserControl>